type Table {
    id: ID!
    name: String!
}
extend type Query {
    table(name: String!): Table!
    tables(keyspace: String!): [Table!]!
}

input NewTable {
    name: String!
    params: [String]!
}
extend type Mutation {
    createTable(in: NewTable!): Table!
    alterTable(in: NewTable!): Table!
    dropTable(in: String!): Boolean!
}